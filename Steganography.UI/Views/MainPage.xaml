<Page x:Class="Steganography.UI.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steganography.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="768"
      Title="MainPage"
      Background="White">

    <Grid HorizontalAlignment="Center">
        <Label Content="Steganography" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Available algorithms:" HorizontalAlignment="Center" Margin="80,50,27,0" VerticalAlignment="Top" Width="148"/>
        <Button x:Name="LsbButton" FontSize="16" Content="Least Significant Bit" Margin="80,80,27,0" VerticalAlignment="Top" Height="100" Click="LsbButton_Click"/>
        <Button x:Name="PatchworkButton" FontSize="16"  Content="Patchwork" Margin="80,185,27,0" VerticalAlignment="Top" Height="100" Click="PatchworkButton_Click"/>
        
    </Grid>
</Page>
